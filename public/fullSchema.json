{
  "openapi": "3.0.0",
  "info": {
    "version": "1.1.0",
    "title": "Manage API",
    "description": "This api is for all endpoints related to the manage area.",
    "contact": {
      "name": "ChilliPharm",
      "url": "https://www.chillipharm.com"
    },
    "license": {
      "name": "UNLICENSED",
      "url": "https://www.chillipharm.com"
    }
  },
  "servers": [
    {
      "url": "http://chillipharm.test:3000/api/v1",
      "description": "Local development"
    },
    {
      "url": "https://qa.chillipharm.dev/api/v1",
      "description": "QA"
    },
    {
      "url": "https://chillipharm-staging.com/api/v1",
      "description": "Staging"
    },
    {
      "url": "https://chillipharm-uat.com/api/v1",
      "description": "UAT"
    },
    {
      "url": "https://www.chillipharm.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Global Form Templates",
      "description": "Endpoints related to global form templates"
    },
    {
      "name": "Form Templates",
      "description": "Endpoints related to form templates"
    }
  ],
  "paths": {
    "/manage/form_templates/{id}": {
      "get": {
        "summary": "Get Form Template",
        "operationId": "getFormTemplate",
        "tags": [
          "Form Templates"
        ],
        "security": [
          {
            "userSessionKey": [],
            "chillipharmSession": []
          }
        ],
        "description": "Retrieve a specific form template by its ID.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The unique identifier of the form template."
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response with form template data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/FormTemplate"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    },
    "/manage/global_form_templates": {
      "post": {
        "summary": "Create Global Form Template",
        "operationId": "postGlobalFormTemplates",
        "tags": [
          "Global Form Templates"
        ],
        "security": [
          {
            "userSessionKey": [],
            "chillipharmSession": []
          }
        ],
        "description": "Create a new global form template from form template id",
        "requestBody": {
          "description": "Form template ID to create global form template",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "form_template_id": {
                    "type": "string",
                    "description": "The unique identifier of the form template to be used for creating the global form template."
                  }
                },
                "required": [
                  "form_template_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response with global form template data.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GlobalFormTemplate"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "409": {
            "$ref": "#/components/responses/Conflict"
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "userSessionKey": {
        "type": "apiKey",
        "in": "cookie",
        "name": "user_session_key",
        "description": "User session key cookie"
      },
      "chillipharmSession": {
        "type": "apiKey",
        "in": "cookie",
        "name": "_chillipharm_session",
        "description": "ChilliPharm session cookie"
      }
    },
    "schemas": {
      "Error": {
        "description": "An error",
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "The error message",
            "example": "Bad request. Missing or invalid input parameters."
          }
        }
      },
      "FormTemplate": {
        "description": "API schema for shortened global form templates.",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "The unique id of the form template."
          },
          "name": {
            "type": "string",
            "description": "The name of the form template."
          },
          "created_at": {
            "type": "string",
            "description": "The date and time when the form template was created."
          }
        },
        "required": [
          "id",
          "name",
          "created_at"
        ],
        "additionalProperties": false
      },
      "FieldValidations": {
        "description": "A form template field validations",
        "type": "object",
        "properties": {
          "required": {
            "type": "boolean",
            "description": "The required status of form template field validations",
            "example": true
          },
          "input_format": {
            "type": "string",
            "description": "The input format of form template field validations",
            "example": "email",
            "nullable": true
          },
          "character_limit": {
            "type": "number",
            "description": "The character limit of form template field validations",
            "example": 100,
            "nullable": true
          },
          "character_restriction": {
            "type": "string",
            "description": "The character restriction of form template field validations",
            "example": "letters",
            "nullable": true
          },
          "date_restriction": {
            "type": "string",
            "description": "The date restriction of form template field validations",
            "example": "not_past_date",
            "nullable": true
          }
        },
        "additionalProperties": false,
        "required": [
          "required"
        ]
      },
      "Field": {
        "description": "A form template field",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The id of form template field",
            "example": "ee8e24-1ca4-ee06-04ed-285b4b02ed70"
          },
          "title": {
            "type": "string",
            "description": "The title of form template field",
            "example": "Test 1"
          },
          "field_type": {
            "type": "string",
            "description": "The field type of form template field",
            "example": "single_line"
          },
          "input_guidance": {
            "type": "string",
            "description": "The input guidance of form template field",
            "example": ""
          },
          "position": {
            "type": "number",
            "description": "The position of form template field",
            "example": 1
          },
          "enabled": {
            "type": "boolean",
            "description": "The enabled status of form template field",
            "example": true
          },
          "validations": {
            "$ref": "#/components/schemas/FieldValidations"
          },
          "options": {
            "type": "array",
            "description": "The options of form template field",
            "items": {
              "type": "string",
              "example": "Option 1"
            }
          },
          "persisted": {
            "type": "boolean",
            "description": "The persisted status of form template field",
            "example": true
          },
          "other_enabled": {
            "type": "boolean",
            "description": "The other enabled status of form template field",
            "example": false
          },
          "other_field": {
            "type": "string",
            "description": "The other field of form template field",
            "example": "Other"
          }
        },
        "additionalProperties": false,
        "required": [
          "title",
          "field_type",
          "position",
          "enabled",
          "validations",
          "options",
          "other_enabled",
          "other_field"
        ]
      },
      "GlobalFormTemplateBody": {
        "description": "API schema for the body of global form templates.",
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the form template."
          },
          "description": {
            "type": "string",
            "description": "A brief description of the form template."
          },
          "fields": {
            "type": "array",
            "description": "The fields included in the form template.",
            "items": {
              "$ref": "#/components/schemas/Field"
            }
          }
        },
        "required": [
          "title",
          "description",
          "fields"
        ],
        "additionalProperties": false
      },
      "GlobalFormTemplate": {
        "description": "API schema for shortened global form templates.",
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The unique identifier of the form template."
          },
          "name": {
            "type": "string",
            "description": "The name of the form template."
          },
          "created_at": {
            "type": "string",
            "description": "The date and time when the form template was created."
          },
          "body": {
            "$ref": "#/components/schemas/GlobalFormTemplateBody"
          }
        },
        "required": [
          "id",
          "name",
          "created_at",
          "body"
        ],
        "additionalProperties": false
      }
    },
    "responses": {
      "BadRequest": {
        "description": "Bad request. Missing or invalid input parameters.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Unauthorized": {
        "description": "Unauthorized. Missing or invalid authentication credentials.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Forbidden": {
        "description": "Forbidden. You do not have permission to access this resource.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "NotFound": {
        "description": "Not found. The requested resource could not be found.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "Conflict": {
        "description": "Conflict. The request could not be completed due to a conflict with the current state of the resource.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "InternalServerError": {
        "description": "Internal server error. Please contact support.",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    }
  }
}